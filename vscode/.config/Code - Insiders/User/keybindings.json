// Coloque suas chave ligações neste arquivo para substituir os padrõesauto[]
[
    {
        "key": "ctrl+shift+,",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "$CURRENT_DATE/$CURRENT_MONTH/$CURRENT_YEAR"
        }
    },
    {
        "key": "ctrl+shift+.",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "$CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND"
        }
    },
    {
        "key": "ctrl+shift+ç",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "SELECTION, TM_SELECTED_TEXT, TM_CURRENT_LINE, TM_CURRENT_WORD, TM_LINE_INDEX, TM_LINE_NUMBER, TM_FILENAME, TM_DIRECTORY, TM_FILEPATH"
        }
    },
    {
        "key": "ctrl+shift+k ctrl+shift+s",
        "command": "editor.action.sortLinesAscending"
    },
    { 
        "key": "ctrl+shift+=",
        "command": "wwm.aligncode",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+alt+i",
        "command": "editor.action.formatSelection",
        "when": "editorHasDocumentSelectionFormattingProvider && editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+k ctrl+f",
        "command": "-editor.action.formatSelection",
        "when": "editorHasDocumentSelectionFormattingProvider && editorTextFocus && !editorReadonly"
    }
]