#!/bin/sh
#
# ~/.xprofile
#
# Executed by LightDM, GDM, SLiM, nodm

export COMPOSER_HOME=${HOME}/.composer
[ -d ${HOME}/bin ] && export PATH=${PATH}:$HOME/bin
[ -d ${HOME}/apps ] && export PATH=${PATH}:${HOME}/apps
[ -d ${HOME}/.config/yarn/global ] && export PATH=${PATH}:${HOME}/.config/yarn/global
[ -d ${HOME}/.yarn/bin ] && export PATH=${PATH}:${HOME}/.yarn/bin
[ -d ${HOME}/.npm/bin ] && export PATH=${PATH}:${HOME}/.npm/bin
[ -d ${HOME}/.deno/bin ] && export PATH=${PATH}:${HOME}/.deno/bin
[ -d ${COMPOSER_HOME}/vendor/bin ] && export PATH=${PATH}:${COMPOSER_HOME}/vendor/bin
[ -d $HOME/.local/bin ] && export PATH=${PATH}:$HOME/.local/bin
[ -d $HOME/.local/share/gem/ruby/2.7.0/bin ] && export PATH=${PATH}:$HOME/.local/share/gem/ruby/2.7.0/bin

# Nodejs
VERSION=v15.8.0
DISTRO=linux-x64
export PATH=/usr/local/lib/nodejs/node-$VERSION-$DISTRO/bin:$PATH
