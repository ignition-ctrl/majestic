border-bottom-color = ${colors.background-alt}

; xwindow cpu memory filesystem network temperature pulseaudio date lock clip powermenu
modules-left = i3 browser thunar terminal telegram downloads colorpicker
modules-center = xwindow
modules-right = cpu memory temperature headset pulseaudio date lock clip powermenu

cursor-click = pointer
