click-middle = ~/.config/polybar/scripts/downloads.sh c > /dev/null 2> /dev/null &
click-right = ~/.config/polybar/scripts/downloads.sh i > /dev/null 2> /dev/null &
exec = ~/.config/polybar/scripts/downloads.sh

[module/browser]
