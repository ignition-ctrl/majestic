#!/usr/bin/env bash
################################################################################
#                                                                              #
# Arquivo: ~/.config/rofi/scripts/apps                                         #
#                                                                              #
# Autor: Lucas Saliés Brum a.k.a. sistematico <lucas@archlinux.com.br>         #
#                                                                              #
# Criado em: 30/04/2019 13:55:09                                               #
